  <% @full_technical_entries = [] %>
  <% @intern_technical_entries = [] %>
  <% @full_other_entries = [] %>
  <% @intern_other_entries = [] %>
  <% for i in 0 ... @careerentries.size %>
    <% if @careerentries[i].year == @year %>
      <% if @careerentries[i].fulltime_or_intern == "Full-time" %>
        <% @full_entries.push(@careerentries[i]) %>
        <% if @careerentries[i].job_category == "Investment Banking" %>
          <% @full_banking_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Consulting" %>
          <% @full_consulting_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Finance" %>
          <% @full_finance_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Technology" %>
          <% @full_technology_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Technical" %>
          <% @full_technical_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Other" %>
          <% @full_other_entries.push(@careerentries[i]) %>
        <% end %>
      <% elsif @careerentries[i].fulltime_or_intern == "Internship" %>
        <% @intern_entries.push(@careerentries[i]) %>
        <% if @careerentries[i].job_category == "Investment Banking" %>
          <% @intern_banking_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Consulting" %>
          <% @intern_consulting_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Finance" %>
          <% @intern_finance_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Technology" %>
          <% @intern_technology_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Technical" %>
          <% @intern_technical_entries.push(@careerentries[i]) %>
        <% elsif @careerentries[i].job_category == "Other" %>
          <% @intern_other_entries.push(@careerentries[i]) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

