        <% end %>
        <% if @careerentries[i].job_category == "Finance" %>
          <% @intern_finance_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Technology" %>
          <% @intern_technology_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Other" %>
          <% @intern_other_entries.push(@careerentries[i]) %>
