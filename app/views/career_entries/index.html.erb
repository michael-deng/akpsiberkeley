      <% if @careerentries[i].fulltime_or_intern == "Full-time" %>
        <% @full_entries.push(@careerentries[i]) %>
        <% if @careerentries[i].job_category == "Investment Banking" %>
          <% @full_banking_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Consulting" %>
          <% @full_consulting_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Finance" %>
          <% @full_finance_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Technology" %>
          <% @full_technology_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Other" %>
          <% @full_other_entries.push(@careerentries[i]) %>
        <% end %>
      <% end %>
      <% if @careerentries[i].fulltime_or_intern == "Internship" %>
        <% @intern_entries.push(@careerentries[i]) %>
        <% if @careerentries[i].job_category == "Investment Banking" %>
          <% @intern_banking_entries.push(@careerentries[i]) %>
        <% end %>
        <% if @careerentries[i].job_category == "Consulting" %>
