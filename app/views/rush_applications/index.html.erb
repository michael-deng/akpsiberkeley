<% provide(:title, "Rush Applications") %>

<div class="center-content">
  <div class="banner" id="rushees-banner">
    <div class="dark-layer">
    	<div class="banner-text">
        Rushees
        <hr>
        <p class="caption">The Hunger Games</p>
      </div>
    </div>
  </div>

  <br>

  <div class="rushees-wrapper">
		<ul class="rushees-thumbnails">
			<% @rush_application.each do |r| %>
				<% if (!r.cut && r.photo?) %>
					<li>
						<%= link_to image_tag(r.photo.url(:small)), rushee_path(r) %>
						<p><%= r.name %></p>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>