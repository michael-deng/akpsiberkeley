<% provide(:title, "Rush Applications") %>

<div class="center-content">
  <div class="banner" id="rushees-banner">
    <div class="dark-layer">
    	<div class="banner-text">
        Rushees
        <hr>
        <p class="caption">List of all rush applications</p>
      </div>
    </div>
  </div>

  <br>

  <div class="rushees-wrapper">
		<ul class="rushees-thumbnails">
			<% @rush_applications.each do |r| %>
				<% @full_name = r.first_name + r.last_name %>
				<li>
					<%= link_to @full_name, rush_application_path(r) %>
				</li>
			<% end %>
		</ul>
	</div>
</div>