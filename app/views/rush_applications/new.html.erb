<% provide(:title, "Rush Application") %>

<div class="center-content">
  <div class="banner" id="login-banner">
    <div class="dark-layer">
      <div class="banner-text">
        RUSH
        <hr>
        <p class="caption">Fill out the information below to apply</p>
      </div>
    </div>
  </div>

  <div class="rush-application-wrapper">
    <div class="rush-application-info">
      <p>Rush Application</p>
    </div>
    <%= form_for(@rush_application, html: { class: 'form-horizontal' }) do |f| %>
      
      <div class="form-group">
        <%= f.label :first_name, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :first_name, :style => "width:100%;", autofocus: true, class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :last_name, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :email, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :phone_number, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :hometown, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :hometown, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :year, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :year, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :major, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :major, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :major_gpa, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :major_gpa, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :cumulative_gpa, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :cumulative_gpa, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sat_score, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_field :sat_score, :style => "width:100%;", class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :haas, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.check_box :haas %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :classes_now, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_area :classes_now, class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :extracurriculars, class: 'col-sm-4 control-label'  %>
        <div class="col-sm-5">
            <%= f.text_area :extracurriculars, class: 'form-control'  %>
        </div>
      </div>

      <div class="form-group submit-button">
          <%= f.submit "Submit Application", class: 'btn btn-primary'  %>
      </div>
    <% end %>
  </div>
</div>