<% provide(:title, "Active Brothers") %>

<div class="center-content">
  <div class="banner" id="actives-banner">
    <div class="dark-layer">
      <div class="banner-container">
      	<div class="banner-text">
          BROTHERS 
        </div>
        <hr class="hr-sm"/>
        <div class="banner-caption">We are proud of the diverse backgrounds and interests of all our brothers</div>
      </div>
    </div>
  </div>

  <br>
  
  <div class="actives-wrapper">
  	<ul class="actives-thumbnails">
			<% @actives.each do |a| %>
				<% if (a.display && a.photo?) %>
					<li>
						<%= link_to image_tag(a.photo.url(:small)), active_path(a) %>
						<p><%= a.name %></p>
					</li>
				<% end %>
			<% end %>
		</ul>
    <p>Actives Not Pictured</p>
    <ul class="not-pictured-actives">
      <% @actives.each do |a| %>
        <% if (a.display && !a.photo?) %>
          <li>
            <%= link_to a.name, active_path(a) %>
          </li>
        <% end %>
      <% end %>
    </ul>
	</div>
</div>
